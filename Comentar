Ejercicio 1.
print ("Conversion de temperatura de grados Farenheit a Celcius")
far = float(input("Ingrese la temperatura en grados Farenheit: "))
print(f'La temperatura en grados Celcius es: {(far-32)*(5/9)}')

Ejercicio 2.
print ("Operaciones aritméticas con dos números")
n1 = float(input("Ingrese el valor del primer numero: "))
n2 = float(input("Ingrese el valor del segundo numero: "))
print(f'La suma de ambos números es: {n1+n2}')
print(f'La resta de ambos números es: {n1-n2}')
print(f'La multuplicación de ambos números es: {n1*n2}')
print(f'La división de ambos números es: {n1/n2}')

Ejercicio 3.
print ("Cálculo de perimetro y área de un rectangulo")
base = float(input("Ingrese el valor de la base: "))
altura = float(input("Ingrese el valor de la altura: "))
print(f'El área del rectangulo es: {basealtura}')
print(f'El perímetro del rectangulo es: {2base+2*altura}')

Ejercicio 4.
print ("Cálculo de promedio de 3 números")
n1 = float(input("Ingrese el valor del primer numero: "))
n2 = float(input("Ingrese el valor del segundo numero: "))
n3 = float(input("Ingrese el valor del tercer numero: "))
print(f'El promedio de los números es: {(n1+n2+n3)/3}')

